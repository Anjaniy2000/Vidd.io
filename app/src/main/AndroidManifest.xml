<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.viddio">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logowithouttext"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logowithouttext"
        android:supportsRtl="true"
        android:theme="@style/Theme.Viddio">
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:label="Create New Account"/>
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="Login"/>
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Viddio.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>